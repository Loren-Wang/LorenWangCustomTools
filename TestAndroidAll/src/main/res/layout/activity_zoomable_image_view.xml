<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".image.ZoomableImageViewActivity">

    <android.lorenwang.customview.imageview.AvlwFrescoZoomableImageView
        android:id="@+id/imgZoom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpgList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/imgZoom"
        android:layout_marginTop="100dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDialog"
        app:layout_constraintTop_toBottomOf="@id/vpgList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="缩放弹窗"/>

</androidx.constraintlayout.widget.ConstraintLayout>
