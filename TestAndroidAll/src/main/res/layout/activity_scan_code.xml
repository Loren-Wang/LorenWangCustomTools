<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".graphicCodeScan.ScanCodeActivity">

    <android.lorenwang.graphic_code_scan.AgcslwScanView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shadowPercentLeft="0.3"
        app:shadowPercentRight="0.3"
        app:shadowPercentTop="0.3"
        app:shadowPercentBottom="0.3"
        app:shadowColor="#99000000"
        app:outShadowSquare="true"
        tools:ignore="MissingPrefix" />

    <ImageView
        android:id="@+id/viewScan"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/surfaceView"
        android:text="测试"/>

</androidx.constraintlayout.widget.ConstraintLayout>
