<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.location.LocationActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求权限"
        android:onClick="locationStartClick" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartNetwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用网络进行定位"
        android:onClick="locationStartClick" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用设备进行定位"
        android:onClick="locationStartClick" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartAccurate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用经度模式进行定位"
        android:onClick="locationStartClick" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止定位"
        android:onClick="locationStartClick" />

</androidx.appcompat.widget.LinearLayoutCompat>
