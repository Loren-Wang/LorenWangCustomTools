<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:scrollbars="none">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/test"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <android.lorenwang.customview.imageview.AvlwCircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"
                app:avlw_aiv_borderWidth="5dp"
                app:avlw_aiv_borderColor="#0f0"
                tools:ignore="MissingPrefix"/>

            <android.lorenwang.customview.imageview.AvlwRoundedRectangleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"
                app:avlw_aiv_roundedRectangleAngle="20dp"
                app:avlw_aiv_borderWidth="2dp"
                tools:ignore="MissingPrefix"
                android:layout_marginTop="10dp" />

            <android.lorenwang.customview.imageview.AvlwRoundedRectangleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"
                app:avlw_aiv_roundedRectangleAngleLeftTop="20dp"
                app:avlw_aiv_borderWidth="2dp"
                tools:ignore="MissingPrefix"
                android:layout_marginTop="10dp"/>

            <android.lorenwang.customview.imageview.AvlwRoundedRectangleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"
                app:avlw_aiv_roundedRectangleAngleRightTop="20dp"
                app:avlw_aiv_borderWidth="2dp"
                tools:ignore="MissingPrefix"
                android:layout_marginTop="10dp"/>

            <android.lorenwang.customview.imageview.AvlwRoundedRectangleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"
                app:avlw_aiv_roundedRectangleAngleLeftBottom="20dp"
                app:avlw_aiv_borderWidth="2dp"
                tools:ignore="MissingPrefix"
                android:layout_marginTop="10dp"/>

            <android.lorenwang.customview.imageview.AvlwRoundedRectangleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"
                app:avlw_aiv_roundedRectangleAngleRightBottom="20dp"
                app:avlw_aiv_borderWidth="2dp"
                tools:ignore="MissingPrefix"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </ScrollView>




</LinearLayout>
