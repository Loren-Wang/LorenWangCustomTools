<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


        <android.lorenwang.customview.editText.AvlwQuantityOfCommodityEditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/avlw_solid_radius_8"
            android:backgroundTint="#dcdcdc"
            android:text="3333"
            app:avlwAddButtonDrawableAllow="@drawable/icon_empty_add"
            app:avlwAddButtonDrawableNotAllow="@drawable/icon_empty_add_unable"
            app:avlwReduceButtonDrawableAllow="@drawable/icon_empty_sub"
            app:avlwReduceButtonDrawableNotAllow="@drawable/icon_empty_sub_unable"
            app:avlwTextInsideDistance="10dp"
            app:avlwOptionsButtonWidth="15dp"
            app:avlwQuantityBorderColor="#000"
            app:avlwQuantityBorderWidth="1dp"
            app:avlwQuantityBorderRadio="8dp"
            app:avlwOptionsButtonInsideDistance="3dp"
            tools:ignore="MissingPrefix" />

        <android.lorenwang.customview.editText.AvlwQuantityOfCommodityEditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/avlw_solid_radius_8"
            android:backgroundTint="#dcdcdc"
            android:text="1"
            app:avlwAddButtonDrawableAllow="@drawable/icon_empty_add"
            app:avlwAddButtonDrawableNotAllow="@drawable/icon_empty_add_unable"
            app:avlwReduceButtonDrawableAllow="@drawable/icon_empty_sub"
            app:avlwReduceButtonDrawableNotAllow="@drawable/icon_empty_sub_unable"
            app:avlwTextInsideDistance="10dp"
            app:avlwOptionsButtonWidth="15dp"
            app:avlwOptionsButtonInsideDistance="3dp"
            android:layout_marginTop="10dp"
            tools:ignore="MissingPrefix" />

        <android.lorenwang.customview.editText.AvlwQuantityOfCommodityEditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/avlw_solid_radius_8"
            android:backgroundTint="#dcdcdc"
            android:text="9999"
            app:avlwAddButtonDrawableAllow="@drawable/icon_empty_add"
            app:avlwAddButtonDrawableNotAllow="@drawable/icon_empty_add_unable"
            app:avlwReduceButtonDrawableAllow="@drawable/icon_empty_sub"
            app:avlwReduceButtonDrawableNotAllow="@drawable/icon_empty_sub_unable"
            app:avlwTextInsideDistance="10dp"
            app:avlwOptionsButtonWidth="15dp"
            app:avlwOptionsButtonInsideDistance="3dp"
            android:layout_marginTop="10dp"
            tools:ignore="MissingPrefix" />

        <android.lorenwang.customview.editText.AvlwQuantityOfCommodityEditText
            android:id="@+id/testInput"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/avlw_solid_radius_8"
            android:backgroundTint="#dcdcdc"
            android:text="6666"
            app:avlwAddButtonDrawableAllow="@drawable/icon_empty_add"
            app:avlwAddButtonDrawableNotAllow="@drawable/icon_empty_add_unable"
            app:avlwReduceButtonDrawableAllow="@drawable/icon_empty_sub"
            app:avlwReduceButtonDrawableNotAllow="@drawable/icon_empty_sub_unable"
            app:avlwTextInsideDistance="10dp"
            app:avlwOptionsButtonWidth="15dp"
            app:avlwOptionsButtonInsideDistance="3dp"
            android:layout_marginTop="10dp"
            tools:ignore="MissingPrefix" />


    </LinearLayout>

</ScrollView>
