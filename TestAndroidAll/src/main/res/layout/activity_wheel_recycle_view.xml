<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.recycleView.WheelRecycleViewActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="切换位置"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="移除选中"/>

    <android.lorenwang.customview.recycleview.AvlwWheelRecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:avlwDividerHeight="1dp"
        app:avlwDividerColor="#00ffffff"
        app:avlwSelectTextColor="#101010"
        app:avlwUnSelectTextColor="#999"
        app:avlwSelectTextSize="@dimen/textSize16"
        app:avlwUnSelectTextSize="@dimen/textSize16"
        app:avlwWheelOffset="2"
        app:avlwSelectTextIsBold="true"
        tools:ignore="MissingPrefix" />

</androidx.appcompat.widget.LinearLayoutCompat>
