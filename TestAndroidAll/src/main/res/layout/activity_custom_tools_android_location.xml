<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.location.LocationActivity"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_set_gao"
            style="@style/MainButtons"
            android:text="设置定位方式---高德" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_set_bai"
            style="@style/MainButtons"
            android:text="设置定位方式---百度" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_set_tx"
            style="@style/MainButtons"
            android:text="设置定位方式---腾讯" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_set_default"
            style="@style/MainButtons"
            android:text="设置定位方式---本机" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_high"
            style="@style/MainButtons"
            android:text="开始定位---高精度" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_net"
            style="@style/MainButtons"
            android:text="开始定位---网络" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_device"
            style="@style/MainButtons"
            android:text="开始定位---设备" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_end"
            style="@style/MainButtons"
            android:text="停止定位" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>
