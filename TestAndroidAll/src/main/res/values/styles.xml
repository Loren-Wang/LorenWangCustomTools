<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DefaultButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainButtons" parent="DefaultButton">
        <item name="android:onClick">mainClick</item>
    </style>

    <style name="AnimButton" parent="DefaultButton">
        <item name="android:onClick">animClick</item>
    </style>

    <!--默认标题栏样式-->
    <style name="DefaultTitleBarHeadView">
        <item name="avlw_tbh_leftBgRes">@android:drawable/ic_notification_clear_all</item>
        <item name="avlw_tbh_leftDistanceLeft">16dp</item>
        <item name="avlw_tbh_leftDistanceRight">16dp</item>
        <item name="avlw_tbh_titleTextSize">@dimen/textSize16</item>
        <item name="avlw_tbh_titleTextColor">#464646</item>
    </style>

    <!--默认标题栏样式-->
    <style name="FixedWidthHeightDrawableButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="avlw_fwhdb_drawableWidth">50dp</item>
        <item name="avlw_fwhdb_drawableHeight">50dp</item>
        <item name="avlw_fwhdb_drawableTextDistance">5dp</item>
        <item name="avlw_fwhdb_drawableResId">@drawable/image_default</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">#f00</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>


    <!--退款理由选择item-->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:textColor">#464646</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:drawableRight">@drawable/checkbox_type_1</item>
    </style>
</resources>
