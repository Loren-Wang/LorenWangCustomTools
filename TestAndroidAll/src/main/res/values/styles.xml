<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--漫画书籍首章点赞、喜欢样式-->
    <style name="dialog_cartoon_first_chapter_count">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18.7sp</item>
        <item name="android:backgroundTint">#00f</item>
        <item name="drawablePosi">DRAWABLE_POSI_LEFT</item>
        <item name="drawableWidth">23dp</item>
        <item name="drawableHeight">23dp</item>
        <item name="drawableTextDistance">18dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DefaultButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainButtons" parent="DefaultButton">
        <item name="android:onClick">mainClick</item>
    </style>

    <style name="AnimButton" parent="DefaultButton">
        <item name="android:onClick">animClick</item>
    </style>

    <!--默认标题栏样式-->
    <style name="DefaultTitleBarHeadView">
        <item name="avlwLeftBgRes">@android:drawable/ic_notification_clear_all</item>
        <item name="avlwLeftDistanceLeft">16dp</item>
        <item name="bavlwLeftDistanceRight">16dp</item>
        <item name="avlwTitleTextSize">@dimen/textSize16</item>
        <item name="avlwTitleTextColor">#464646</item>
    </style>

    <!--默认标题栏样式-->
    <style name="FixedWidthHeightDrawableButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="avlwDrawableWidth">25dp</item>
        <item name="avlwDrawableHeight">25dp</item>
        <item name="avlwDrawableTextDistance">5dp</item>
        <item name="avlwDrawableResId">@drawable/image_default</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>
