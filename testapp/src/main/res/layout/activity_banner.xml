<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.lorenwang.customview.viewpager.AvlwCustomViewPager
            android:id="@+id/vpgList0"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:avlwCVPIndicatorType="point"
            tools:ignore="MissingPrefix" />

        <android.lorenwang.customview.viewpager.AvlwCustomViewPager
            android:id="@+id/vpgList1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:avlwCVPIndicatorType="text"
            android:layout_marginTop="10dp"
            tools:ignore="MissingPrefix" />

        <android.lorenwang.customview.viewpager.AvlwCustomViewPager
            android:id="@+id/vpgList2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:avlwCVPIndicatorType="point"
            android:layout_marginTop="10dp"
            tools:ignore="MissingPrefix" />

        <android.lorenwang.customview.viewpager.AvlwCustomViewPager
            android:id="@+id/vpgList3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:avlwCVPIndicatorType="text"
            app:avlwCVPAutoplayTime="0"
            android:layout_marginTop="10dp"
            tools:ignore="MissingPrefix" />

    </LinearLayout>
</ScrollView>
