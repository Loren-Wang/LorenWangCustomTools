<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AvlwPriceShowTextView">
        <!--显示类型-->
        <attr name="avlw_pst_priceShowShowType" format="enum">
            <!--默认只显示货币-->
            <enum name="DEFAULT" value="0" />
            <!--货币符号-->
            <enum name="CURRENCY_SYMBOL" value="1" />
            <!--货币符号和描述、金额范围-->
            <enum name="CURRENCY_SYMBOL_AND_DES_AND_RANG" value="3" />
        </attr>
        <!--金额符号-->
        <attr name="avlw_pst_priceSymbol" format="enum">
            <!--默认的，按照原有金额符号处理-->
            <enum name="DEFAULT" value="0" />
            <!--空，什么都不加，原有的符号也会被移除-->
            <enum name="NONE" value="1" />
            <!--正数，会在货币符号前加“+”原有的符号也会被移除-->
            <enum name="POSITIVE" value="2" />
            <!--负数，会在货币符号前加“-”原有的符号也会被移除-->
            <enum name="MINUS" value="3" />
            <!--相反的，也就是值为负的时候显示正，之为正则显示负-->
            <enum name="OPPOSITE" value="4" />
            <!--相反的，也就是值为负的时候显示正，之为正则显示负,同时转换后是正值的情况下不显示符号-->
            <enum name="OPPOSITE_AND_POSITIVE_NONE" value="5" />
        </attr>
        <!--金额格式化格式-->
        <attr name="avlw_pst_priceFormatPattern" format="string" />
        <!--金额文本大小-->
        <attr name="avlw_pst_priceTextSize" format="dimension" />
        <!--金额符号和金额之间的间距-->
        <attr name="avlw_pst_priceSymbolPriceDistance" format="dimension" />
        <!--金额文本颜色-->
        <attr name="avlw_pst_priceTextColor" format="color" />
        <!--金额文本-->
        <attr name="avlw_pst_priceText" format="string" />
        <!--金额文本是否加粗-->
        <attr name="avlw_pst_priceTextBold" format="boolean" />
        <!--金额文本处理模式-->
        <attr name="avlw_pst_priceRoundingMode" format="integer" />
        <!--是否显示划线价格-->
        <attr name="avlw_pst_priceShowLine" format="boolean" />

        <!--************************************************符号部分************************************************-->

        <!--货币符号-->
        <attr name="avlw_pst_currencySymbol" format="string" />
        <!--金额符号在金额的位置-->
        <attr name="avlw_pst_currencySymbolLocation" format="enum">
            <!--左上顶部齐平-->
            <enum name="leftTop" value="0" />
            <!--左下底部齐平-->
            <enum name="leftBottom" value="1" />
            <!--上左，左侧齐平-->
            <enum name="topLeft" value="2" />
            <!--下左，左侧齐平-->
            <enum name="bottomLeft" value="3" />
            <!--右上，顶部齐平-->
            <enum name="rightTop" value="4" />
            <!--右下，底部齐平-->
            <enum name="rightBottom" value="5" />
            <!--上右，右侧齐平-->
            <enum name="topRight" value="6" />
            <!--下右，右侧齐平-->
            <enum name="bottomRight" value="7" />
        </attr>
        <!--金额符号和文本之间的间距-->
        <attr name="avlw_pst_currencySymbolPriceDistance" format="dimension" />
        <!--金额符号文本大小-->
        <attr name="avlw_pst_currencySymbolTextSize" format="dimension" />
        <!--金额符号文本颜色-->
        <attr name="avlw_pst_currencySymbolTextColor" format="color" />
        <!--金额符号文本是否加粗-->
        <attr name="avlw_pst_currencySymbolTextBold" format="boolean" />

        <!--************************************************描述部分************************************************-->

        <!--描述内容-->
        <attr name="avlw_pst_describe" format="string" />
        <!--描述内容和文本之间的间距-->
        <attr name="avlw_pst_describePriceDistance" format="dimension" />
        <!--描述内容文本大小-->
        <attr name="avlw_pst_describeTextSize" format="dimension" />
        <!--描述内容文本颜色-->
        <attr name="avlw_pst_describeTextColor" format="color" />
        <!--描述内容文本最大宽度-->
        <attr name="avlw_pst_describeMaxWidth" format="dimension" />
        <!--描述内容文本最大高度-->
        <attr name="avlw_pst_describeMaxHeight" format="dimension" />
        <!--描述内容文本是否加粗-->
        <attr name="avlw_pst_describeTextBold" format="boolean" />


        <!--************************************************范围、金额、符号、描述部分************************************************-->

        <!--描述起始内容-->
        <attr name="avlw_pst_desStart" format="string" />
        <!--描述结束内容-->
        <attr name="avlw_pst_desEnd" format="string" />
        <!--价格最小-->
        <attr name="avlw_pst_priceMin" format="string" />
        <!--价格最大-->
        <attr name="avlw_pst_priceMax" format="string" />
        <!--范围分隔符-->
        <attr name="avlw_pst_rangSeparate" format="string" />
        <!--范围最大金额是否需要金额符号-->
        <attr name="avlw_pst_rangMaxNeedCurrencySymbol" format="boolean" />
        <!--范围分隔符文本大小-->
        <attr name="avlw_pst_rangSeparateTextSize" format="dimension" />
        <!--范围分隔符文本颜色-->
        <attr name="avlw_pst_rangSeparateTextColor" format="color" />
        <!--范围分隔符是否加粗-->
        <attr name="avlw_pst_rangSeparateTextBold" format="boolean" />
        <!--分隔符左右间距-->
        <attr name="avlw_pst_rangSeparateLeftRightDistance" format="dimension" />
        <!--描述起始有边距-->
        <attr name="avlw_pst_desStartRightDistance" format="dimension" />
        <!--描述结束左边距-->
        <attr name="avlw_pst_desEndLeftDistance" format="dimension" />

    </declare-styleable>
</resources>
