<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AvlwPriceShowTextView">
        <!--显示类型-->
        <attr name="avlwPriceShowShowType" format="enum">
            <!--默认只显示货币-->
            <enum name="DEFAULT" value="0" />
            <!--货币符号-->
            <enum name="CURRENCY_SYMBOL" value="1" />
            <!--货币符号和描述、金额范围-->
            <enum name="CURRENCY_SYMBOL_AND_DES_AND_RANG" value="3" />
        </attr>
        <!--金额符号-->
        <attr name="avlwPriceSymbol" format="enum">
            <!--默认的，按照原有金额符号处理-->
            <enum name="DEFAULT" value="0" />
            <!--空，什么都不加，原有的符号也会被移除-->
            <enum name="NONE" value="1" />
            <!--正数，会在货币符号前加“+”原有的符号也会被移除-->
            <enum name="POSITIVE" value="2" />
            <!--负数，会在货币符号前加“-”原有的符号也会被移除-->
            <enum name="MINUS" value="3" />
            <!--相反的，也就是值为负的时候显示正，之为正则显示负-->
            <enum name="OPPOSITE" value="4" />
            <!--相反的，也就是值为负的时候显示正，之为正则显示负,同时转换后是正值的情况下不显示符号-->
            <enum name="OPPOSITE_AND_POSITIVE_NONE" value="5" />
        </attr>
        <!--金额格式化格式-->
        <attr name="avlwPriceFormatPattern" format="string" />
        <!--金额文本大小-->
        <attr name="avlwPriceTextSize" format="dimension" />
        <!--金额符号和金额之间的间距-->
        <attr name="avlwPriceSymbolPriceDistance" format="dimension" />
        <!--金额文本颜色-->
        <attr name="avlwPriceTextColor" format="color" />
        <!--金额文本-->
        <attr name="avlwPriceText" format="string" />
        <!--金额文本是否加粗-->
        <attr name="avlwPriceTextBold" format="boolean" />
        <!--金额文本处理模式-->
        <attr name="avlwPriceRoundingMode" format="integer" />
        <!--是否显示划线价格-->
        <attr name="avlwPriceShowLine" format="boolean" />

        <!--************************************************符号部分************************************************-->

        <!--货币符号-->
        <attr name="avlwCurrencySymbol" format="string" />
        <!--金额符号在金额的位置-->
        <attr name="avlwCurrencySymbolLocation" format="enum">
            <!--左上顶部齐平-->
            <enum name="leftTop" value="0" />
            <!--左下底部齐平-->
            <enum name="leftBottom" value="1" />
            <!--上左，左侧齐平-->
            <enum name="topLeft" value="2" />
            <!--下左，左侧齐平-->
            <enum name="bottomLeft" value="3" />
            <!--右上，顶部齐平-->
            <enum name="rightTop" value="4" />
            <!--右下，底部齐平-->
            <enum name="rightBottom" value="5" />
            <!--上右，右侧齐平-->
            <enum name="topRight" value="6" />
            <!--下右，右侧齐平-->
            <enum name="bottomRight" value="7" />
        </attr>
        <!--金额符号和文本之间的间距-->
        <attr name="avlwCurrencySymbolPriceDistance" format="dimension" />
        <!--金额符号文本大小-->
        <attr name="avlwCurrencySymbolTextSize" format="dimension" />
        <!--金额符号文本颜色-->
        <attr name="avlwCurrencySymbolTextColor" format="color" />
        <!--金额符号文本是否加粗-->
        <attr name="avlwCurrencySymbolTextBold" format="boolean" />

        <!--************************************************描述部分************************************************-->

        <!--描述内容-->
        <attr name="avlwDescribe" format="string" />
        <!--描述内容和文本之间的间距-->
        <attr name="avlwDescribePriceDistance" format="dimension" />
        <!--描述内容文本大小-->
        <attr name="avlwDescribeTextSize" format="dimension" />
        <!--描述内容文本颜色-->
        <attr name="avlwDescribeTextColor" format="color" />
        <!--描述内容文本最大宽度-->
        <attr name="avlwDescribeMaxWidth" format="dimension" />
        <!--描述内容文本最大高度-->
        <attr name="avlwDescribeMaxHeight" format="dimension" />
        <!--描述内容文本是否加粗-->
        <attr name="avlwDescribeTextBold" format="boolean" />


        <!--************************************************范围、金额、符号、描述部分************************************************-->

        <!--描述起始内容-->
        <attr name="avlwDesStart" format="string" />
        <!--描述结束内容-->
        <attr name="avlwDesEnd" format="string" />
        <!--价格最小-->
        <attr name="avlwPriceMin" format="string" />
        <!--价格最大-->
        <attr name="avlwPriceMax" format="string" />
        <!--范围分隔符-->
        <attr name="avlwRangSeparate" format="string" />
        <!--范围最大金额是否需要金额符号-->
        <attr name="avlwRangMaxNeedCurrencySymbol" format="boolean" />
        <!--范围分隔符文本大小-->
        <attr name="avlwRangSeparateTextSize" format="dimension" />
        <!--范围分隔符文本颜色-->
        <attr name="avlwRangSeparateTextColor" format="color" />
        <!--范围分隔符是否加粗-->
        <attr name="avlwRangSeparateTextBold" format="boolean" />
        <!--分隔符左右间距-->
        <attr name="avlwRangSeparateLeftRightDistance" format="dimension" />
        <!--描述起始有边距-->
        <attr name="avlwDesStartRightDistance" format="dimension" />
        <!--描述结束左边距-->
        <attr name="avlwDesEndLeftDistance" format="dimension" />

    </declare-styleable>
</resources>
