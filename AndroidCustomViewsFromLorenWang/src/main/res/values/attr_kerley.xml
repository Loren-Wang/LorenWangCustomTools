<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="KerleyView">
        <!--左侧空间-->
        <attr name="kv_orientation" format="enum" >
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <!--上侧空间-->
        <attr name="kv_spaceTop" format="dimension" />
        <!--下侧空间-->
        <attr name="kv_spaceBottom" format="dimension" />
        <!--左侧空间-->
        <attr name="kv_spaceLeft" format="dimension" />
        <!--右侧空间-->
        <attr name="kv_spaceRight" format="dimension" />
        <!--分割线高度-->
        <attr name="kv_kerleyHeight" format="dimension" />
        <!--分割线颜色-->
        <attr name="kv_kerleyColor" format="color" />
    </declare-styleable>
</resources>
