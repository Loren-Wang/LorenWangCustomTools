<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AvlwFixedWidthHeightDrawableButton">
        <!--图标显示位置-->
        <attr name="avlw_fwhdb_drawablePosition">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <!--图标显示宽度-->
        <attr name="avlw_fwhdb_drawableWidth" format="dimension" />
        <!--图标渲染颜色-->
        <attr name="avlw_fwhdb_drawableTint" format="color" />
        <!--图标显示高度-->
        <attr name="avlw_fwhdb_drawableHeight" format="dimension" />
        <!--图标和文本的间距-->
        <attr name="avlw_fwhdb_drawableTextDistance" format="dimension" />
        <!--图标显示资源-->
        <attr name="avlw_fwhdb_drawableResId" format="reference" />
        <!--文本显示位置-->
        <attr name="avlw_fwhdb_textGravity" format="reference">
            <flag name="top" value="1" />
            <flag name="bottom" value="2" />
            <flag name="left" value="3" />
            <flag name="start" value="4" />
            <flag name="right" value="5" />
            <flag name="end" value="6" />
            <flag name="center_vertical_left" value="7" />
            <flag name="center_vertical_right" value="8" />
            <flag name="center_horizontal_top" value="9" />
            <flag name="center_horizontal_bottom" value="10" />
            <flag name="center" value="11" />
            <flag name="right_bottom" value="12" />
        </attr>
        <!--图片是否占用padding位置-->
        <attr name="avlw_fwhdb_drawableUsePadding" format="boolean" />
    </declare-styleable>

</resources>
