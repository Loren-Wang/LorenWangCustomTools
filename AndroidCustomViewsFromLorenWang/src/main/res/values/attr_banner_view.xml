<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AvlwBannerView">
        <!--指示器类型-->
        <attr name="avlwBvIndicatorType" format="enum">
            <enum name="none" value="0" />
            <enum name="text" value="1" />
            <enum name="point" value="2" />
        </attr>
        <!--自动播放时间-->
        <attr name="avlwBvAutoplayTime" format="integer" />
        <!--dot点的图片资源-->
        <attr name="avlwBvIndicatorDotItemViewRes" format="reference" />
        <!--dot点的宽度-->
        <attr name="avlwBvIndicatorDotItemWidth" format="dimension" />
        <!--dot点的高度-->
        <attr name="avlwBvIndicatorDotItemHeight" format="dimension" />
        <!--dot点的左右外边距-->
        <attr name="avlwBvIndicatorDotItemMarginLeftRight" format="dimension" />
        <!--dot选中颜色-->
        <attr name="avlwBvIndicatorDotSelectColor" format="color" />
        <!--dot未选中颜色-->
        <attr name="avlwBvIndicatorDotUnSelectColor" format="color" />
        <!--指示器文本颜色-->
        <attr name="avlwBvIndicatorTextColor" format="color" />
        <!--指示器位置是否左对齐（针对于轮播组件）-->
        <attr name="avlwBvIndicatorTheLeft" format="boolean"/>
        <!--指示器位置是否上对齐（针对于轮播组件）-->
        <attr name="avlwBvIndicatorTheTop" format="boolean"/>
        <!--指示器位置是否右对齐（针对于轮播组件）-->
        <attr name="avlwBvIndicatorTheRight" format="boolean"/>
        <!--指示器位置是否下对齐（针对于轮播组件）-->
        <attr name="avlwBvIndicatorTheBottom" format="boolean"/>
        <!--指示器左边距-->
        <attr name="avlwBvIndicatorMarginLeft" format="dimension" />
        <!--指示器右边距-->
        <attr name="avlwBvIndicatorMarginRight" format="dimension" />
        <!--指示器上边距-->
        <attr name="avlwBvIndicatorMarginTop" format="dimension" />
        <!--指示器下边距-->
        <attr name="avlwBvIndicatorMarginBottom" format="dimension" />
        <!--指示器左内边距-->
        <attr name="avlwBvIndicatorPaddingLeft" format="dimension" />
        <!--指示器右内边距-->
        <attr name="avlwBvIndicatorPaddingRight" format="dimension" />
        <!--指示器上内边距-->
        <attr name="avlwBvIndicatorPaddingTop" format="dimension" />
        <!--指示器下内边距-->
        <attr name="avlwBvIndicatorPaddingBottom" format="dimension" />
        <!--指示器背景-->
        <attr name="avlwBvIndicatorBackground" format="reference" />
        <!--指示器背景tint颜色-->
        <attr name="avlwBvIndicatorBackgroundTintColor" format="color" />
    </declare-styleable>
</resources>
