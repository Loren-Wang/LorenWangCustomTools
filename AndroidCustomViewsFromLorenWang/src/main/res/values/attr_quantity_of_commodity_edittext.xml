<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AvlwQuantityOfCommodityEditText">
        <!--新增按钮允许操作颜色-->
        <attr name="avlwAddButtonDrawableAllow" format="reference" />
        <!--新增按钮禁止操作颜色-->
        <attr name="avlwAddButtonDrawableNotAllow" format="reference" />
        <!--减少按钮允许操作颜色-->
        <attr name="avlwReduceButtonDrawableAllow" format="reference" />
        <!--减少按钮禁止操作颜色-->
        <attr name="avlwReduceButtonDrawableNotAllow" format="reference" />
        <!--文本内部左右边距-->
        <attr name="avlwTextInsideDistance" format="dimension" />
        <!--操作按钮宽度，高度和控件高度一致-->
        <attr name="avlwOptionsButtonWidth" format="dimension" />
        <!--操作按钮内部边距-->
        <attr name="avlwOptionsButtonInsideDistance" format="dimension" />
        <!--操作按钮和文本分隔之间的间距-->
        <attr name="avlwOptionsButtonAndTextSeparatedDistance" format="dimension" />
        <!--文本显示宽度-->
        <attr name="avlwTextShowWidth" format="dimension" />
        <!--边框颜色-->
        <attr name="avlwQuantityBorderColor" format="color" />
        <!--边框宽度-->
        <attr name="avlwQuantityBorderWidth" format="dimension" />
        <!--边框角度-->
        <attr name="avlwQuantityBorderRadio" format="dimension" />
        <!--边框是否单独给文本内容-->
        <attr name="avlwBorderOnlyShowContent" format="boolean" />
    </declare-styleable>
</resources>
