<?xml version="1.0" encoding="utf-8"?><!--水平滑动tab标签-->
<resources>
    <declare-styleable name="AvlwHorizontalSlipTabLayout">
        <!--tab文本，中间使用~~（双）做分隔-->
        <attr name="hstl_tabTextList" format="string" />
        <!--tab默认位置，只有在没有通过代码动态设置时生效-->
        <attr name="hstl_tabDefaultPosition" format="integer" />
        <attr name="hstl_tabWidth" format="dimension" />
        <attr name="hstl_tabWidthPercent" format="float" />
        <attr name="hstl_tabHeight" format="dimension" />
        <attr name="hstl_tabTextSize" format="dimension" />
        <attr name="hstl_tabTextColorY" format="color" />
        <attr name="hstl_tabTextColorN" format="color" />
        <attr name="hstl_tabTextBoldY" format="boolean" />
        <attr name="hstl_tabTextBoldN" format="boolean" />
        <attr name="hstl_lineWidth" format="dimension" />
        <attr name="hstl_lineWidthPercent" format="float" />
        <attr name="hstl_lineHeight" format="dimension" />
        <attr name="hstl_lineColor" format="color" />
        <attr name="hstl_lineTextSpace" format="dimension" />
        <attr name="hstl_lineTextBaselineAligning" format="boolean" />

        <!--第二种类型的视图-->
        <attr name="hstl_tabBgColorY" format="color" />
        <attr name="hstl_viewRadius" format="dimension" />
        <attr name="hstl_viewBgColor" format="color" />

        <!--第三中类型视图-->
        <attr name="hstl_lineContainerColor" format="color" />
        <attr name="hstl_lineContainerHeight" format="dimension" />
        <attr name="hstl_lineContainerWidthPercent" format="float" />
    </declare-styleable>
    <!--tabWidth&#45;&#45;tab宽度;-->
    <!--hstl_tabWidthPercent&#45;&#45;tab宽度相对于屏幕宽度百分比;-->
    <!--*      hstl_linePercent&#45;&#45;tab下划线宽度百分比；-->
    <!--*      tabHeight&#45;&#45;tab高度；-->
    <!--*      tabTextSize&#45;&#45;tab文本大小；-->
    <!--*      tabTextColorY&#45;&#45;tab文本选中颜色；-->
    <!--*      tabTextColorN&#45;&#45;tab文本未选中颜色；-->
    <!--*      lineWidth&#45;&#45;下划线宽度；-->
    <!--*      lineHeight&#45;&#45;下划线高度；-->
    <!--*      lineColor&#45;&#45;下划线颜色；-->
    <!--*      lineTextSpace&#45;&#45;文本下划线之间间距；-->
    <!--*      hstl_lineContainerColor&#45;&#45;下划线容器颜色；-->
    <!--*      hstl_lineContainerHeight&#45;&#45;下划线容器高度；-->
    <!--*      hstl_lineContainerWidthPercent&#45;&#45;下划线容器宽度相对于屏幕百分比；-->

    <!--    hstl_tabTextBoldY ;选中文本是否加粗-->
    <!--    hstl_tabTextBoldN ;未选中文本是否加粗-->
</resources>
