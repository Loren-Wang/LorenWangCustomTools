<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AvlwProgressBar">
        <attr name="avlw_pb_showProgressType">
            <enum name="PROGRESS_TYPE_1" value="0" />
            <enum name="PROGRESS_TYPE_2" value="1" />
            <enum name="PROGRESS_TYPE_3" value="2" />
        </attr>

        <!--基础参数-->
        <attr name="avlw_pb_progress" format="float" />
        <!--进度条-->
        <attr name="avlw_pb_progressImage" format="reference" />
        <!--背景-->
        <attr name="avlw_pb_progressBgImage" format="reference" />


        <!--第一种类型为视频播放类型的-->
        <!--当前缓存进度-->
        <attr name="avlw_pb_progressCache" format="float" />
        <!--缓存进度-->
        <attr name="avlw_pb_progressCacheImage" format="reference" />
        <!--进度条进度大高度-->
        <attr name="avlw_pb_progressBigHeight" format="dimension" />
        <!--进度条进度小高度-->
        <attr name="avlw_pb_progressSmallHeight" format="dimension" />

        <!--第二张滑动进度类型的-->
        <!--进度条显示高度-->
        <attr name="avlw_pb_progressShowHeight" format="dimension" />

        <!--第一种视频播放和第二张滑动进度共同使用的-->
        <!--进度条当前-->
        <attr name="avlw_pb_progressCurrentImage" format="reference" />
        <!--进度条当前进度高度-->
        <attr name="avlw_pb_progressCurrentHeight" format="dimension" />
        <!--进度条当前进度宽度-->
        <attr name="avlw_pb_progressCurrentWidth" format="dimension" />

        <!--第三种以及默认进度条样式-->
        <!--进度背景高度-->
        <attr name="avlw_pb_progressBgHeight" format="dimension" />
        <!--进度条高度（居中背景）-->
        <attr name="avlw_pb_progressHeight" format="dimension" />

    </declare-styleable>
</resources>
